

pipeline {
    agent any

    stages {
        stage('dockerfile') {
            steps {

                sh'''
                docker build -t pacman-image1 .
                '''
            }
        }
        stage('test') {
            steps {
                sh '''
                npm test
                '''
            }
        }
        stage('image') {
            steps {
                sh '''
                docker tag pacman-image1
                '''
            }
        }
    }
}